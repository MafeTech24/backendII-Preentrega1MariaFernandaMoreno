{{!-- Layout base --}}
{{ header }}

<h1>Carrito ID: {{cart._id}}</h1>

{{#if cart.products.length}}
<ul id="productList">
    {{#each cart.products}}
    <li>
        <div>
            <strong>{{this.product.title}}</strong><br>
            Precio: ${{this.product.price}}<br>
            Cantidad: {{this.quantity}}<br>
            Subtotal: ${{multiply this.product.price this.quantity}}
        </div>
    </li>
    {{/each}}
</ul>

<h2>Total: ${{calculateTotal cart.products}}</h2>
{{else}}
<p style="text-align:center">Este carrito está vacío.</p>
{{/if}}